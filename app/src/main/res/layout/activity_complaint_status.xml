<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/subscriptionNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subscription Number" />

    <DatePicker
        android:id="@+id/datePickerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="true" />

    <Button
        android:id="@+id/openMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Location" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView3"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <EditText
        android:id="@+id/complaintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter complaint details" />

    <Button
        android:id="@+id/submitComplaintBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Complaint" />

</LinearLayout>
