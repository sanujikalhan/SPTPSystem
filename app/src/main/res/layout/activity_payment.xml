<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/paymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Management System"
        android:textSize="20sp"
        android:layout_marginBottom="20dp" />

    <CheckBox
        android:id="@+id/visaCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa Card" />

    <CheckBox
        android:id="@+id/masterCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Card" />

    <CheckBox
        android:id="@+id/sampathViswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sampath Viswa" />

    <CheckBox
        android:id="@+id/mobileWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Wallet" />

    <EditText
        android:id="@+id/payAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pay amount"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/payButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:layout_marginTop="20dp" />
</LinearLayout>
